{
    if(instance_exists(fire))
    {
        fire.x = x-4;
        fire.y = y+10;
    }
    burnTimer--;
    timeBurning++;
    if(timeBurning mod 30 == 0)
    {
        if(hosting)
        {
            var dam = mArrowDamage[firePlayer]*mFireMult[firePlayer];
            HP -= dam;
            mDamageTotal += dam;
            mDamageDealt[firePlayer] += dam;            
        }
        else
        {
            HP -= arrowDamage*fireDamageMult;//(burnDuration/30);
        }
    }
    if(burnTimer &lt;= 0)
    {
        timeBurning = 0;
        burning = false;
        with(fire)
        {
            instance_destroy();
        }
    }
}
else
{
    timeBurning = 0;
    with(fire)
    {
        instance_destroy();
    }
}

