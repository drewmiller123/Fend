{
    if(instance_exists(frost))
    {
        frost.x = x;
        frost.y = y;
    }
    
    chillTimer--;
    if(image_speed != startingImageSpeed/2)
    {
        image_speed = startingImageSpeed/2;
        image_index = ceil(image_index);
    }
    
    if(speed != 0)
    {
        speed = startingSpeed/2;
    }
    
    if(chillTimer == 0)
    {
        chilled = false;
        image_speed = startingImageSpeed;
        image_index = ceil(image_index);
        if(speed != 0)
        {
            speed = startingSpeed;
        }
        with(frost)
        {
            instance_destroy();
        }
    }
}
else
{
    with(frost)
    {
        instance_destroy();
    }
}


cooldown--;

